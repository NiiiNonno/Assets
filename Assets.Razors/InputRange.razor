@namespace Nonno.Assets.Razors
<figure>
    <figcaption>@Name</figcaption>
    <dl>
        <dt>Width</dt>
        <dd>
            <input type="number" min="0" step="@Step" @bind-value="Width" @bind-value:event="oninput" />
        </dd>
        <dt>Height</dt>
        <dd>
            <input type="number" min="0" step="@Step" @bind-value="Height" @bind-value:event="oninput" />
        </dd>
    </dl>
</figure>
